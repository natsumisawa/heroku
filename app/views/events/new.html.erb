<%= form_for (@events) do |f| %>
  <%= f.label :title, style: { 'margin-right' => 8 } %>
  <%= f.text_field :time, placeholder: 'time', value: '' %>
  <%= f.text_field :place, placeholder: 'place', value: '' %>
  <%= f.text_area :detail, placeholder: '', style: 'width: 100%;height: 300px;' %>
  <%= button_tag type: "submit", class: "btn btn--block" do %>投稿する<i class="icon-arrow-right"></i>
  <% end %>
<% end %>